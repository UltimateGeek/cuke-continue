# See https://editorconfig.org

# top-most editorconfig file
root = true

# Apply these settings to all files
[*]
end_of_line              = lf
indent_size              = 4
indent_style             = space
insert_final_newline     = true
trim_trailing_whitespace = true

# Specific file types' settings

[*.{yml,yaml,feature}]
indent_size              = 2
indent_style             = space
trim_trailing_whitespace = true

[*.md]
max_line_length          = 70
